<resources>

    //

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#fff</item>
        <item name="android:colorActivatedHighlight">#fff</item>
    </style>

    //
    <style name="SiyahTema.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">#1c1c1c</item>
        <item name="colorAccent">#4f4f4f</item>
        <item name="android:colorControlNormal">#fff</item>
        <item name="android:statusBarColor">@color/siyah_color</item>
    </style>

    <style name="KirmiziTema.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">#601010</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorAccent">#b41e1e</item>
        <item name="android:colorControlNormal">#fff</item>
        <item name="android:statusBarColor">@color/kirmizi_color</item>
    </style>

    <style name="YesilTema.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">#17a644</item>
        <item name="colorAccent">#10b696</item>
        <item name="android:statusBarColor">@color/yesil_color</item>
        <item name="android:colorControlNormal">#fff</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>


    <style name="PembeTema.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorAccent">#FFAEB9</item>
        <item name="colorPrimary">#FF82AB</item>
        <item name="android:statusBarColor">@color/pembe_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:colorControlNormal">#fff</item>
    </style>

    <style name="MaviTema.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#4c93af</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:colorControlNormal">#fff</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#4c93af</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    //

    // Temalar

    <style name="YesilTema" parent="AppTheme">
        <item name="colorPrimary">#17a644</item>
        <item name="colorAccent">#10b696</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:statusBarColor">@color/yesil_color</item>
        <item name="colorControlNormal">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="KirmiziTema" parent="AppTheme">
        <item name="colorPrimary">#601010</item>
        <item name="colorAccent">#b41e1e</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/kirmizi_color</item>
    </style>

    <style name="SiyahTema" parent="AppTheme">
        <item name="colorPrimary">#1c1c1c</item>
        <item name="colorAccent">#4f4f4f</item>
        <item name="android:colorControlNormal">#fff</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/siyah_color</item>
    </style>

    <style name="PembeTema" parent="AppTheme">
        <item name="colorAccent">#FFAEB9</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">#FF82AB</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/pembe_color</item>
        <item name="android:colorControlNormal">#fff</item>
    </style>

    <style name="MaviTema" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#8ec6dd</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:statusBarColor">@color/def_color</item>
        <item name="android:colorControlNormal">#fff</item>
    </style>

     //

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#8ec6dd</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:statusBarColor">@color/def_color</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#ffffff</item>
    </style>

</resources>
