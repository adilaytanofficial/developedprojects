<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sub_term_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

        <ListView
            android:id="@+id/sub_parent_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subterm_404_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/subterm_404"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sub"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/subterm_404_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_term_404"
            android:layout_below="@+id/subterm_404"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="12pt"
            android:textColor="#000"
            />
    </RelativeLayout>



</RelativeLayout>