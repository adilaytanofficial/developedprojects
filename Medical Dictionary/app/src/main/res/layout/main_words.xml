<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.adilaytan.medicaldictionarypro.MainActivity"
    >

    <RelativeLayout
        android:id="@+id/main_404_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/main_404"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/term"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/main_404_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/term_404"
            android:layout_below="@+id/main_404"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="12pt"
            android:textColor="#000"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_words_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</RelativeLayout>